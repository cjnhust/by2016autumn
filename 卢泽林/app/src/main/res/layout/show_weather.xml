<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="310dp"
                android:background="@mipmap/qiutian"
                android:padding="10dp">
                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28°"
                    android:textSize="80sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic"/>
                <TextView
                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/temperature"
                    android:text="武汉|多云"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>
                <ImageView
                    android:id="@+id/clear"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:layout_marginLeft="320dp"/>
                <TextView
                    android:id="@+id/wind_dir"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="230dp"
                    android:text="东南风"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"/>
                <TextView
                    android:id="@+id/wind_sc"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wind_dir"
                    android:text="3级"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"/>
                <View
                    android:id="@+id/view1"
                    android:layout_width="1.5dp"
                    android:layout_height="40dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="240dp"
                    android:layout_toRightOf="@id/wind_sc"/>
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginTop="230dp"
                    android:text="相对湿度"
                    android:layout_toRightOf="@id/view1"/>
                <TextView
                    android:id="@+id/hum"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:layout_below="@id/text1"
                    android:text="52%"
                    android:layout_toRightOf="@id/view1"
                    android:gravity="center"/>
                <View
                    android:id="@+id/view2"
                    android:layout_width="1.5dp"
                    android:layout_height="40dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="240dp"
                    android:layout_toRightOf="@id/hum"/>
                <TextView
                    android:id="@+id/qlty"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="空气良"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginTop="230dp"
                    android:layout_toRightOf="@id/view2"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/AQI"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:text="74"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:layout_below="@id/qlty"
                    android:layout_toRightOf="@id/view2"
                    android:gravity="center"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/icon_day1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/rain"/>
                <TextView
                    android:id="@+id/day1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_day1"
                    android:text="今天"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/day1_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="多云 | 东南风"
                    android:layout_toRightOf="@id/icon_day1"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/day1"/>
                <TextView
                    android:id="@+id/day1_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="#000000"
                    android:text="29°/17°"
                    android:layout_marginLeft="200dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#808080"
                android:layout_marginLeft="70dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/icon_day2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/rain"/>
                <TextView
                    android:id="@+id/day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_day2"
                    android:text="明天"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/day2_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="多云 | 东南风"
                    android:layout_toRightOf="@id/icon_day2"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/day2"/>
                <TextView
                    android:id="@+id/day2_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="#000000"
                    android:text="29°/17°"
                    android:layout_marginLeft="200dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#808080"
                android:layout_marginLeft="70dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/icon_day3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/rain"/>
                <TextView
                    android:id="@+id/day3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/icon_day3"
                    android:text="后天"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/day3_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="多云 | 东南风"
                    android:layout_toRightOf="@id/icon_day3"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/day3"/>
                <TextView
                    android:id="@+id/day3_tmp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="#000000"
                    android:text="29°/17°"
                    android:layout_marginLeft="200dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#808080"/>
            <Button
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFFFF"
                android:text="15日趋势预报"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>